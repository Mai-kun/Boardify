<UserControl x:Class="BoardifyApp.Views.BoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:BoardifyApp.ViewModels"
             xmlns:helpers="clr-namespace:BoardifyApp.Helpers"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:BoardViewModel}"
             Height="Auto" Width="Auto">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BoardifyApp;component/Styles/DropStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <DockPanel Margin="20">
        <Grid DockPanel.Dock="Top" VerticalAlignment="Center" Margin="0 0 0 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="{Binding Board.Name}" 
                       FontSize="24" FontWeight="Bold" Margin="20 0 0 0"
                       VerticalAlignment="Center" />

            <StackPanel Grid.Column="1" Orientation="Horizontal" 
                        HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Style="{StaticResource ButtonStyle}" Content="{helpers:Loc BoardView_AddTaskButton}"
                        Command="{Binding OpenAddTaskDialogCommand}" />
                
                <Button Style="{StaticResource ButtonStyle}" Content="{helpers:Loc BoardView_BackButton}"
                        Command="{Binding BackCommand}" />
            </StackPanel>
        </Grid>

        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" CanContentScroll="False">
            <ItemsControl ItemsSource="{Binding Columns}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="5" Margin="10" Padding="10" Width="250" 
                                Style="{StaticResource DropHighlightBorder}"
                                AllowDrop="True"
                                DragEnter="Column_DragEnter"
                                DragLeave="Column_DragLeave"
                                DragOver="Column_DragOver"
                                Drop="Column_Drop">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding Column.Title}"
                                           FontWeight="Bold"
                                           FontSize="18"
                                           TextAlignment="Center"
                                           Margin="0 0 0 10" />

                                <ItemsControl ItemsSource="{Binding Tasks}"
                                              Margin="0 10 0 0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource TaskCardStyle}"
                                                    PreviewMouseLeftButtonDown="TaskCard_PreviewMouseLeftButtonDown"
                                                    Cursor="Hand">
                                                <TextBlock Text="{Binding TaskCard.Title}" TextWrapping="Wrap" />
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>
